<div class="card m-3">

  <div class="card-header">
    <div class="row">
        <p class="m-0" id="comment-title">
        </p>
    </div>
  </div>

  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p>{{comment}}</p>
      <br>
      <footer class="blockquote-footer">{{user.name}}, <cite title="Date">{{format_date createdAt}}</cite></footer>
    </blockquote>
  </div>

</div>


<div class="card m-3">

    <h5 class="card-header">Create New Post</h5>

    <div class="card-body border-dark">
        <form class="comment-form" data-post_id="{{id}}">

            <div class="form-group">
                <label for="new-post-title">Title:</label>
                <input type="text" class="form-control" id="new-post-title">
            </div>

            <div class="form-group">
                <label for="new-post-content">Content:</label>
                <textarea class="form-control" id="new-post-content" rows="3"></textarea>
            </div>

            <button type="submit" class="btn btn-secondary btn-block" id="add-post">Create</button>
        </form>
    </div>
    
</div>


<div class="card m-3">

    <h5 class="card-header">Edit Post</h5>

    <div class="card-body border-dark">
        <form class="edit-form" data-post_id="/edit_post/{{id}}">

            <div class="form-group">
                <label for="new-post-title">Title:</label>
                <input type="text" class="form-control" id="new-post-title" value="{{post.title}}">
            </div>

            <div class="form-group">
                <label for="new-post-content">Content:</label>
                <textarea class="form-control" id="new-post-content" value="{{post.content}}" rows="3"></textarea>
            </div>

            <button type="submit" class="btn btn-secondary btn-block" id="update-post" name="update-post">Update Post</button>
            <br>
            <button type="submit" class="btn btn-secondary btn-block" id="delete-post" name="delete-post">Delete</button>

        </form>
    </div>
    
</div>

<script>
    dashboard = document.querySelector('#main-title').innerHTML = 'Your Dashboard';
</script>
